@{
    var title = ViewData["Title"] as string ?? "Owner Portal";
}
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@title - Owner</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        :root {
            --brand: #1d4ed8; 
            --brand2: #06b6d4; 
            --bg: #0b1220;
            --card: rgba(255,255,255,.92);
            --muted: #64748b;
        }

        body {
            background: radial-gradient(1200px 700px at 20% 20%, rgba(29,78,216,.28), rgba(2,6,23,0) 55%), radial-gradient(900px 500px at 80% 60%, rgba(6,182,212,.20), rgba(2,6,23,0) 60%), var(--bg);
            min-height: 100vh;
        }

        .topbar {
            background: rgba(2,6,23,.55);
            border-bottom: 1px solid rgba(255,255,255,.08);
            backdrop-filter: blur(10px);
        }

        .brand {
            font-weight: 900;
            letter-spacing: -.02em;
            color: #fff;
            text-decoration: none;
        }

            .brand small {
                color: rgba(255,255,255,.75);
                font-weight: 700;
            }

        .shell {
            padding: 20px;
        }

        .sidebar {
            background: rgba(255,255,255,.06);
            border: 1px solid rgba(255,255,255,.10);
            border-radius: 16px;
            backdrop-filter: blur(10px);
            padding: 14px;
            color: #fff;
        }

        .navlink {
            display: flex;
            align-items: center;
            gap: 10px;
            padding: 10px 12px;
            border-radius: 12px;
            color: rgba(255,255,255,.88);
            text-decoration: none;
        }

            .navlink:hover {
                background: rgba(255,255,255,.08);
                color: #fff;
            }

            .navlink.active {
                background: linear-gradient(135deg,var(--brand),var(--brand2));
                color: #fff;
                font-weight: 800;
            }

        .content-card {
            background: var(--card);
            border: 1px solid rgba(15,23,42,.10);
            border-radius: 18px;
            box-shadow: 0 18px 50px rgba(15,23,42,.18);
            padding: 18px;
        }

        .badge-role {
            background: rgba(255,255,255,.12);
            border: 1px solid rgba(255,255,255,.18);
            border-radius: 999px;
            padding: 6px 10px;
            color: #fff;
            font-weight: 800;
        }

        footer {
            color: rgba(255,255,255,.65);
        }
    </style>

    @RenderSection("Styles", required: false)
</head>
<body>
    <header class="topbar py-3">
        <div class="container-fluid px-4 d-flex align-items-center justify-content-between">
            <a class="brand" href="/">
                DHA <small>Owner / Seller</small>
            </a>
            <div class="d-flex align-items-center gap-3">
                <span class="badge-role">STEP-1</span>
                <partial name="_LoginPartial" />
            </div>
        </div>
    </header>

    <main class="container-fluid shell">
        <div class="row g-3">
            <aside class="col-12 col-lg-3">
                <div class="sidebar">
                    <div class="fw-bold mb-2">Owner Menu</div>
                    <a class="navlink active"
                       asp-controller="Home"
                       asp-action="OwnerDashboard">
                        Dashboard
                    </a>

                    <a class="navlink" href="/Owner/Applications">Applications</a>
                    <a class="navlink" href="#">Payments</a>
                    <a class="navlink" href="#">Documents</a>
                    <a class="navlink" href="#">Support</a>
                </div>
            </aside>

            <section class="col-12 col-lg-9">
                <div class="content-card">
                    @RenderBody()
                </div>
            </section>
        </div>

        <footer class="text-center mt-4">
            © @DateTime.Now.Year DHA — Owner Portal
        </footer>
    </main>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
