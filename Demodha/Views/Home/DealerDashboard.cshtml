@model Demodha.ViewModels.DealerDashboardVM
@using System.Linq

@{
    ViewData["Title"] = "Dealer Dashboard";
    Layout = "_Layout.Dealer";

    string yesNo(bool b) => b ? "Done" : "Pending";
    string badge(bool b) => b ? "bg-success" : "bg-secondary";
}

<div class="d-flex flex-wrap align-items-center justify-content-between gap-2 mb-3">
    <div>
        <h3 class="mb-1 fw-bold">Dealer Dashboard</h3>
        <div class="text-muted">
            Step-2: Review owner applications, attach Challan + Consent Forms, then submit to Transfer Desk.
        </div>
    </div>

    <div class="d-flex gap-2">
        <a class="btn btn-primary" href="/Dealer/Inbox">Open Inbox</a>
        <a class="btn btn-outline-secondary" href="/Dealer/Submitted">Submitted Cases</a>
    </div>
</div>

<div class="row g-3 mb-3">
    <div class="col-6 col-lg-2">
        <div class="border rounded-4 p-3 bg-white">
            <div class="text-muted">New</div>
            <div class="fs-3 fw-bold">@Model.PendingFromOwner</div>
        </div>
    </div>

    <div class="col-6 col-lg-2">
        <div class="border rounded-4 p-3 bg-white">
            <div class="text-muted">Pending Docs</div>
            <div class="fs-3 fw-bold">
                @Model.Applications.Count(a =>
                !a.HasChallan ||
                !a.HasSellerConsent ||
                !a.HasPurchaserConsent
                                )
            </div>
        </div>
    </div>

    <div class="col-6 col-lg-2">
        <div class="border rounded-4 p-3 bg-white">
            <div class="text-muted">Ready</div>
            <div class="fs-3 fw-bold">
                @Model.Applications.Count(a => a.HasChallan && a.HasSellerConsent && a.HasPurchaserConsent)
            </div>
        </div>
    </div>

    <div class="col-6 col-lg-3">
        <div class="border rounded-4 p-3 bg-white">
            <div class="text-muted">Submitted to Transfer Desk</div>
            <div class="fs-3 fw-bold">@Model.SubmittedToTransfer</div>
        </div>
    </div>

    <div class="col-6 col-lg-3">
        <div class="border rounded-4 p-3 bg-white">
            <div class="text-muted">Returned</div>
            <div class="fs-3 fw-bold">@Model.Returned</div>
        </div>
    </div>
</div>

@{
    var pending = Model.Applications
        .Where(a => a.Status != "Submitted to Transfer Desk")
        .ToList();
}

<div class="row g-3">
    <div class="col-12 col-lg-8">
        <div class="border rounded-4 p-3 bg-white">
            <div class="d-flex align-items-center justify-content-between mb-2">
                <div class="fw-bold">Pending Queue (Owner → Dealer)</div>
                <a href="/Dealer/Inbox" class="text-decoration-none">View all</a>
            </div>

            <div class="table-responsive">
                <table class="table align-middle mb-0">
                    <thead>
                        <tr class="text-muted">
                            <th>App #</th>
                            <th>Owner</th>
                            <th>Plot / File</th>
                            <th>Docs</th>
                            <th style="width:170px;">Progress</th>
                            <th class="text-end">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!pending.Any())
                        {
                            <tr>
                                <td colspan="6" class="text-center text-muted py-4">
                                    No pending cases right now.
                                </td>
                            </tr>
                        }
                        else
                        {
                            foreach (var a in pending)
                            {
                                <tr>
                                    <td class="fw-semibold">@a.AppNo</td>
                                    <td>
                                        @a.OwnerName
                                    </td>
                                    <td>@a.Plot</td>
                                    <td>
                                        <div class="d-flex flex-wrap gap-2">
                                            <span class="badge @badge(a.HasChallan)">Challan: @yesNo(a.HasChallan)</span>
                                            <span class="badge @badge(a.HasSellerConsent)">Seller Consent: @yesNo(a.HasSellerConsent)</span>
                                            <span class="badge @badge(a.HasPurchaserConsent)">Purchaser Consent: @yesNo(a.HasPurchaserConsent)</span>
                                        </div>
                                        <div class="mt-2">
                                            <span class="badge bg-@a.Badge">@a.Status</span>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="progress" style="height:10px;">
                                            <div class="progress-bar" role="progressbar" style="width:@a.Progress%"></div>
                                        </div>
                                        <div class="small text-muted mt-1">@a.Progress% complete</div>
                                    </td>
                                    <td class="text-end">
                                        <a class="btn btn-sm btn-outline-primary" href="/Dealer/Applications/Open/@a.Id">Open</a>

                                        @if (a.HasChallan && a.HasSellerConsent && a.HasPurchaserConsent)
                                        {
                                            <a class="btn btn-sm btn-success ms-1" href="/Dealer/Applications/Open/@a.Id">
                                                Submit
                                            </a>
                                        }
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>

        </div>
    </div>

    <div class="col-12 col-lg-4">
        <div class="border rounded-4 p-3 bg-white mb-3">
            <div class="fw-bold mb-2">Dealer Step Checklist (Step-2)</div>

            <div class="py-2 border-bottom">
                <div class="fw-semibold">1) Review owner application</div>
                <div class="text-muted small">Verify Owner docs, plot/file details.</div>
            </div>
            <div class="py-2 border-bottom">
                <div class="fw-semibold">2) Attach Payment Challan</div>
                <div class="text-muted small">Generate/upload challan form.</div>
            </div>
            <div class="py-2 border-bottom">
                <div class="fw-semibold">3) Attach Seller Consent</div>
                <div class="text-muted small">Upload signed consent form.</div>
            </div>
            <div class="py-2 border-bottom">
                <div class="fw-semibold">4) Attach Purchaser Consent</div>
                <div class="text-muted small">Upload signed consent form.</div>
            </div>
            <div class="py-2">
                <div class="fw-semibold">5) Submit to Transfer Desk</div>
                <div class="text-muted small">Once all docs complete.</div>
            </div>

            <div class="mt-3 d-grid gap-2">
               @*  <a class="btn btn-outline-secondary" href="/Dealer/Forms">Download Forms</a> *@
                <a class="btn btn-primary" href="/Dealer/Inbox">Process Next Case</a>
            </div>
        </div>

        <div class="border rounded-4 p-3 bg-white">
            <div class="fw-bold mb-2">Recent Activity</div>
            <div class="text-muted">Activity will appear here once you implement history logs for dealer actions.</div>
        </div>
    </div>
</div>

<div class="mt-3 border rounded-4 p-3 bg-white">
    <div class="fw-bold mb-1">What happens after Dealer submits?</div>
    <div class="text-muted">
        Transfer Desk will validate forms and send case for clearance to Plans, Legal, Land, Building Control and Finance.
        If any objection is raised, case can return back for correction.
    </div>
</div>
