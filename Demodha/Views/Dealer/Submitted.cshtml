@model Demodha.ViewModels.DealerSubmittedVM
@using System.Linq
@{
    ViewData["Title"] = "Submitted Cases";
    Layout = "_Layout.Dealer";
}

<div class="d-flex flex-wrap align-items-center justify-content-between gap-2 mb-3">
    <div>
        <h3 class="mb-1 fw-bold">Submitted Cases</h3>
        <div class="text-muted">Cases you already sent to Transfer Desk / clearance stages.</div>
    </div>

    <div class="d-flex gap-2">
        <a class="btn btn-primary" href="/Dealer/Inbox">Open Inbox</a>
        <a class="btn btn-outline-secondary" href="/Home/DealerDashboard">Back to Dashboard</a>
    </div>
</div>

<div class="border rounded-4 p-3 bg-white">
    <div class="d-flex align-items-center justify-content-between mb-2">
        <div class="fw-bold">My Submitted Cases</div>
        <div class="text-muted small">Total: @Model.SubmittedCount</div>
    </div>

    <div class="table-responsive">
        <table class="table align-middle mb-0">
            <thead>
                <tr class="text-muted">
                    <th>App #</th>
                    <th>Owner</th>
                    <th>Plot / File</th>
                    <th>Status</th>
                    <th class="text-end">Action</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Cases == null || !Model.Cases.Any())
                {
                    <tr><td colspan="5" class="text-center text-muted py-4">No submitted cases yet.</td></tr>
                }
                else
                {
                    foreach (var a in Model.Cases)
                    {
                        <tr>
                            <td class="fw-semibold">@a.AppNo</td>
                            <td>@a.OwnerName</td>
                            <td>
                                @a.Plot
                                <div class="text-muted small">Last update: @(a.UpdatedOn?.ToLocalTime().ToString("MMM dd, yyyy") ?? a.CreatedOn.ToLocalTime().ToString("MMM dd, yyyy"))</div>
                            </td>
                            <td><span class="badge bg-@a.Badge">@a.StatusText</span></td>
                            <td class="text-end">
                                <a class="btn btn-sm btn-outline-primary"
                                   asp-controller="Dealer"
                                   asp-action="View"
                                   asp-route-id="@a.Id">View</a>

                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
