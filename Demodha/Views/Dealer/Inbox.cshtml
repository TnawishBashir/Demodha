@model Demodha.ViewModels.DealerInboxVM
@using System.Linq
@{
    ViewData["Title"] = "Dealer Inbox";
    Layout = "_Layout.Dealer";
    string yesNo(bool b) => b ? "Done" : "Pending";
    string badge(bool b) => b ? "bg-success" : "bg-secondary";
}

@if (TempData["success"] != null)
{
    <div class="alert alert-success rounded-4">@TempData["success"]</div>
}
@if (TempData["error"] != null)
{
    <div class="alert alert-danger rounded-4">@TempData["error"]</div>
}

<div class="d-flex flex-wrap align-items-center justify-content-between gap-2 mb-3">
    <div>
        <h3 class="mb-1 fw-bold">Inbox (Owner → Dealer)</h3>
        <div class="text-muted">Step-2: Attach Challan + Consent forms, then submit to Transfer Desk.</div>
    </div>

    <div class="d-flex gap-2">
        <a class="btn btn-outline-secondary" href="/Home/DealerDashboard">Back to Dashboard</a>
        <a class="btn btn-primary" href="/Dealer/Submitted">Submitted Cases</a>
    </div>
</div>

<div class="row g-3 mb-3">
    <div class="col-6 col-lg-4">
        <div class="border rounded-4 p-3 bg-white">
            <div class="text-muted">New</div>
            <div class="fs-3 fw-bold">@Model.NewCount</div>
        </div>
    </div>
    <div class="col-6 col-lg-4">
        <div class="border rounded-4 p-3 bg-white">
            <div class="text-muted">Pending Docs</div>
            <div class="fs-3 fw-bold">@Model.PendingDocsCount</div>
        </div>
    </div>
    <div class="col-6 col-lg-4">
        <div class="border rounded-4 p-3 bg-white">
            <div class="text-muted">Ready</div>
            <div class="fs-3 fw-bold">@Model.ReadyCount</div>
        </div>
    </div>
</div>

<div class="border rounded-4 p-3 bg-white">
    <div class="d-flex align-items-center justify-content-between mb-2">
        <div class="fw-bold">Inbox Queue</div>
    </div>

    <div class="table-responsive">
        <table class="table align-middle mb-0">
            <thead>
                <tr class="text-muted">
                    <th>App #</th>
                    <th>Owner</th>
                    <th>Plot / File</th>
                    <th>Docs</th>
                    <th style="width:170px;">Progress</th>
                    <th class="text-end">Action</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Cases == null || !Model.Cases.Any())
                {
                    <tr><td colspan="6" class="text-center text-muted py-4">No pending cases right now.</td></tr>
                }
                else
                {
                    foreach (var a in Model.Cases)
                    {
                        var purchaserOk = !a.HasPurchaser || a.HasPurchaserConsent;

                        <tr>
                            <td class="fw-semibold">@a.AppNo</td>
                            <td>@a.OwnerName</td>
                            <td>
                                @a.Plot
                                <div class="text-muted small">Last update: @(a.UpdatedOn?.ToLocalTime().ToString("MMM dd, yyyy") ?? a.CreatedOn.ToLocalTime().ToString("MMM dd, yyyy"))</div>
                            </td>
                            <td>
                                <div class="d-flex flex-wrap gap-2">
                                    <span class="badge @badge(a.HasChallan)">Challan: @yesNo(a.HasChallan)</span>
                                    <span class="badge @badge(a.HasSellerConsent)">Seller Consent: @yesNo(a.HasSellerConsent)</span>
                                    <span class="badge @badge(purchaserOk)">Purchaser Consent: @yesNo(purchaserOk)</span>
                                </div>
                                <div class="mt-2">
                                    <span class="badge bg-@a.Badge">@a.StatusText</span>
                                </div>
                            </td>
                            <td>
                                <div class="progress" style="height:10px;">
                                    <div class="progress-bar" role="progressbar" style="width:@a.Progress%"></div>
                                </div>
                                <div class="small text-muted mt-1">@a.Progress% complete</div>
                            </td>
                            <td class="text-end">
                                <a class="btn btn-sm btn-outline-primary" href="/Dealer/Applications/Open/@a.Id">Open</a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
