@model Demodha.ViewModels.DealerSubmittedVM
@using System.Linq
@{
    ViewData["Title"] = "Submitted Cases";
    Layout = "_Layout.Dealer";
}

<div class="d-flex align-items-center justify-content-between mb-3">
    <div>
        <h3 class="fw-bold mb-1">Submitted Cases</h3>
        <div class="text-muted">Cases already submitted to Transfer Desk.</div>
    </div>
    <a class="btn btn-outline-secondary" href="/Home/DealerDashboard">Back</a>
</div>

<div class="border rounded-4 p-3 bg-white mb-3">
    <div class="text-muted">Total Submitted</div>
    <div class="fs-3 fw-bold">@Model.SubmittedCount</div>
</div>

<div class="border rounded-4 p-3 bg-white">
    <div class="fw-bold mb-2">Submitted List</div>

    <div class="table-responsive">
        <table class="table align-middle mb-0">
            <thead>
                <tr class="text-muted">
                    <th>App #</th>
                    <th>Owner</th>
                    <th>Plot / File</th>
                    <th>Status</th>
                    <th class="text-end">Action</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Cases == null || !Model.Cases.Any())
                {
                    <tr><td colspan="5" class="text-center text-muted py-4">No submitted cases.</td></tr>
                }
                else
                {
                    foreach (var a in Model.Cases)
                    {
                        <tr>
                            <td class="fw-semibold">@a.AppNo</td>
                            <td>@a.OwnerName</td>
                            <td>@a.Plot</td>
                            <td><span class="badge bg-@a.Badge">@a.StatusText</span></td>
                            <td class="text-end">
                                <a class="btn btn-sm btn-outline-primary" href="/Dealer/Applications/Open/@a.Id">Open</a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
